<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>no-arch</id>
	<formats>
		<format>zip</format>
	</formats>
	<dependencySets>
		<!-- place executable jar in root -->
		<dependencySet>
			<outputDirectory>${file.separator}</outputDirectory>
			<unpack>false</unpack>
			<includes>
				<include>org.talend.components:components-api-service-rest:jar:${project.version}</include>
			</includes>
		</dependencySet>
	</dependencySets>
	<fileSets>
		<!-- configuration files -->
		<fileSet>
			<directory>${project.basedir}${file.separator}target${file.separator}external-resources${file.separator}config</directory>
			<outputDirectory>${file.separator}config</outputDirectory>
			<includes>
				<include>*.*</include>
			</includes>
		</fileSet>

		<!-- Start up scripts -->
		<fileSet>
			<directory>${project.basedir}${file.separator}target${file.separator}external-resources</directory>
			<outputDirectory>${file.separator}</outputDirectory>
			<filtered>true</filtered>
			<fileMode>0755</fileMode>
			<lineEnding>windows</lineEnding>
			<includes>
				<include>*.bat</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}${file.separator}target${file.separator}external-resources</directory>
			<outputDirectory>${file.separator}</outputDirectory>
			<filtered>true</filtered>
			<fileMode>0755</fileMode>
			<lineEnding>unix</lineEnding>
			<includes>
				<include>*.sh</include>
			</includes>
		</fileSet>
		<!-- Maven repo for runtime -->
		<fileSet>
			<directory>${project.basedir}${file.separator}target${file.separator}mvn-repo${file.separator}.m2</directory>
			<outputDirectory>${file.separator}.m2</outputDirectory>
		</fileSet>
	</fileSets>
</assembly>