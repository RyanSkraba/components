<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.talend.components</groupId>
        <artifactId>components-parent</artifactId>
        <version>0.22.0-SNAPSHOT</version>
        <relativePath>../../../components-parent/pom.xml</relativePath>
    </parent>

    <artifactId>kafka-integration</artifactId>

    <name>Components - Kafka Integration Tests</name>
    <packaging>jar</packaging>

    <properties>
        <!-- skip the deployment for integration tests, not necessary -->
        <maven.deploy.skip>true</maven.deploy.skip>
        <coverage.sonar.reportRoot>${project.basedir}/..</coverage.sonar.reportRoot>
    </properties>

    <dependencies>
        <!-- Depend only on definitions. -->
        <dependency>
            <groupId>org.talend.components</groupId>
            <artifactId>kafka-definition</artifactId>
            <version>${project.version}</version>
        </dependency>

        <!-- Tests -->
        <dependency>
            <groupId>org.ops4j.pax.url</groupId>
            <artifactId>pax-url-aether</artifactId>
            <version>2.4.7</version>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-failsafe-plugin</artifactId>
                <configuration>
                    <systemPropertyVariables>
                        <kafka.bootstrap>${docker.host.address}:${kafka.port}</kafka.bootstrap>
                    </systemPropertyVariables>
                </configuration>
            </plugin>
            <plugin>
                <groupId>io.fabric8</groupId>
                <artifactId>docker-maven-plugin</artifactId>
                <version>0.15.1</version>

                <executions>
                    <execution>
                        <id>start</id>
                        <phase>pre-integration-test</phase>
                        <goals>
                            <goal>start</goal>
                        </goals>
                        <configuration>
                            <skip>${really.skip.tests}</skip>
                            <images>
                                <image>
                                    <name>wurstmeister/zookeeper</name>
                                    <alias>zookeeper</alias>
                                    <run>
                                        <ports>
                                            <port>2181</port>
                                        </ports>
                                        <wait>
                                            <time>10000</time>
                                        </wait>
                                    </run>
                                </image>
                                <image>
                                    <name>wurstmeister/kafka:0.10.1.0</name>
                                    <run>
                                        <env>
                                            <HOSTNAME_COMMAND>hostname -i</HOSTNAME_COMMAND>
                                            <KAFKA_ADVERTISED_PORT>9092</KAFKA_ADVERTISED_PORT>
                                            <KAFKA_ZOOKEEPER_CONNECT>zookeeper:2181</KAFKA_ZOOKEEPER_CONNECT>
                                            <KAFKA_CREATE_TOPICS>
                                                test_in:1:1,test_out:1:1,test_avro_in:1:1,test_avro_out:1:1
                                            </KAFKA_CREATE_TOPICS>
                                        </env>
                                        <ports>
                                            <port>kafka.port:9092</port>
                                        </ports>
                                        <links>
                                            <link>zookeeper</link>
                                        </links>
                                        <wait>
                                            <time>10000</time>
                                        </wait>
                                    </run>
                                </image>
                            </images>
                        </configuration>
                    </execution>
                    <execution>
                        <id>stop</id>
                        <phase>post-integration-test</phase>
                        <goals>
                            <goal>stop</goal>
                        </goals>
                        <configuration>
                            <skip>${really.skip.tests}</skip>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>
